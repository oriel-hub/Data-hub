// Apply mappings.
// TODO: Extend for mappings with actions and relationships.
//       Extend for mappings with wildcards.
function idskshub_apply_mappings($mappings_ids) {
  $new_mappings = explode(',', $mappings_ids);
  $mappings_applied = array();
  $message = '';
  if (!empty($new_mappings)) {
    foreach ($new_mappings as $mapping_id) {
      $mapping = new IdsKsMapping();
      $mapping->load($mapping_id);
      if ($mapping->isSaved() && $mapping->get('path_origin') && $mapping->get('path_destination')) {
        if ($mapping->get('source')) { // Added to avoid deleting literals by mistake.
          if (!($mapping->get('action') || $mapping->get('relationship'))) {
            $mappings_applied[] = $mapping->getLabel();
            $literals_original_path = IdsKsLiteral::getIds(array('original_path' => $mapping->get('path_origin')));
            $versions_origin_ids = IdsKsVersionsLiteral::getIds(array('literals' => $literals_original_path));
            $versions_destination_ids = IdsKsVersionsLiteral::getIds(array('path' => $mapping->get('path_destination')));
            if (!empty($versions_origin_ids)) {
              foreach ($versions_origin_ids as $versions_origin_id) {
                //$versions_destination_id = 0;
                $versions_origin = new IdsKsVersionsLiteral();
                $versions_origin->load($versions_origin_id);
                $literals_destination = array();
                // we can't just change the path because there might be some literals that shouldn't be moved (because the attributes don't match, for instance).
                foreach ($versions_origin->get('literals') as $literal_origin) {
                  // If the source and path match.
                  if ($literal_origin && $literal_origin->get('original_path') == $mapping->get('path_origin') && (!$mapping->get('source') || $mapping->get('source')->getId() == $literal_origin->get('source')->getId())) {
                    // we check if the attributes match.
                    $included_attrs_literal = (!$literal_origin->get('attributes') && !$mapping->get('attributes_origin') || !(array_udiff($mapping->get('attributes_origin'), $literal_origin->get('attributes'), 'idskshub_diff')));
                    if ($included_attrs_literal) {
                      $literals_destination[$literal_origin->getId()] = $literal_origin;
                    }
                  }
                }
                // we see if there is already a versions literal with the new path in the item to which this versions literal belongs.
                if (!empty($literals_destination) && ($items_ids = IdsKsItem::getIds(array('versions_literals' => $versions_origin_id)))) {
                  $item_id = end($items_ids); // Each versions is only in one item.
                  $item = new IdsKsItem();
                  $item->load($item_id);
                  if (!$mapping->get('type') || ($item->get('type') && $item->get('type')->getId() == $mapping->get('type')->getId())) {
                    // if the 'mapped' versions literal is already in the item, we update it with the literals in the "old" versions literal.
                    $versions_literals_item = IdsKsItem::getChildrenIds($item_id, 'versions_literals');
                    if ($versions_mapped_item_ids = array_intersect($versions_destination_ids, $versions_literals_item)) { // The mapped path exists in the item.
                      $versions_destination_id = end($versions_mapped_item_ids); // There should be only one versions literal for each mapped path in an item.
                      $versions_destination = new IdsKsVersionsLiteral();
                      $versions_destination->load($versions_destination_id);
                      foreach ($literals_destination as $literal) { // Copy the literals to the existing versions.
                        if (!($versions_destination->inLiterals($literal))) {
                          $versions_destination->add('literals', $literal);
                        }
                      }
                      $versions_destination->save();
                      if (count($versions_origin->get('literals')) == count($literals_destination)) { // If all the literals are copied. There is no need to keep the old one.
                        $versions_origin->delete(TRUE, FALSE); // We don't delete its literals, as they were moved.
                      }
                      else {
                        // Some literals were not moved. We have to keep both versions, removing the ones to move from their old place.
                        $versions_origin->deleteLiteralsByIds(array_keys($literals_destination), FALSE);
                        $versions_origin->save();
                      }
                    }
                    else { // There are no literals with the mapped path.
                      if (count($versions_origin->get('literals')) == count($literals_destination)) {  // All the literals have to be moved.
                        $versions_origin->set('path', $mapping->get('path_destination')); // We can just change the path of the existing versions.
                        $versions_origin->save();
                      }
                      else {
                        // We have to keep the old one (removing the copied literals). $versions_destination is new.
                        $versions_origin->deleteLiteralsByIds(array_keys($literals_destination), FALSE);
                        $versions_origin->save();
                        $versions_destination = new IdsKsVersionsLiteral();
                        $versions_destination->set('literals', array_values($literals_destination)); // Remove NULLs.
                        $versions_destination->set('path', $mapping->get('path_destination'));
                        $versions_destination->save();
                        $item->add('versions_literals', $versions_destination); // Add new versions to the item.
                        $item->save();
                      }
                    }
                  }
                }
              }
            }
          }
          else {
            drupal_set_message(t('Mappings involving actions cannot be applied outside an importing process. Mapping @mapping not applied.', array('@mapping'=>$mapping->getLabel())));
          }
        }
        else {
          drupal_set_message(t('The mapping @mapping does not have a source associated. It was not applied.', array('@mapping'=>$mapping->getLabel())));
        }
      }
    }
  }
  return $mappings_applied;
}

function idskshub_items_by_source($items_ids) {
  $items_source = array();
  foreach($items_ids as $item_id) {
    $track_changes_ids = IdsKsItem::getChildrenIds($item_id, 'track_changes');
    foreach($track_changes_ids as $change_id) {
      if ($sources_ids = IdsKsTrackChanges::getFieldValues('source', array($change_id))) {
        $source_id = end(end($sources_ids));
        $items_source[$source_id][] = $item_id;
      }
    }
  }
  return $items_source;
}

function idskshub_items_by_type($items_ids) {
  $items_type = array();
  foreach($items_ids as $item_id) {
    if ($types_ids = IdsKsItem::getFieldValues('type', array($item_id))) {
      $type_id = end(end($types_ids));
      $items_type[$type_id][] = $item_id;
    }
  }
  return $items_type;
}

/* Record and send notifications */

function idskshub_record_notifications($type_action, $item_id) {
    $recorded = idskshub_get($type_action);
    $recorded[$item_id] = time();
    idskshub_set($type_action, $recorded);
}

function idskshub_notifications() {
  $actions = array('created', 'updated', 'deleted');
  foreach ($actions as $action) {
    $type_action = 'items_' . $action;
    $items = idskshub_get($type_action);
    idskshub_send_notifications($type_action, $items);
    idskshub_set($type_action, array());
  }
}

function idskshub_send_notifications($operation, $items_notify) {
  $notifications = idskshub_get('notify_items');
  $sources = idskshub_sources_options();
  $types = idskshub_get_types_ids();
  $items_notify_ids = array_keys($items_notify);
  $items_source = idskshub_items_by_source($items_notify_ids);
  $items_type = idskshub_items_by_type($items_notify_ids);
  foreach ($notifications as $notification)  {
    $items_ids = array();
    $sources_names = array();
    $types_names = array();
    $items_source_ids = array();
    $items_type_ids = array();
    $rids = $notification['roles'];
    $uids_roles = db_select('users_roles', 'ur')
            ->fields('ur', array('uid'))
            ->condition('rid', $rids, 'IN')
            ->execute()
            ->fetchCol('uid');
    $uids = array_merge($notification['users'], $uids_roles);
    if ($notification['sources'] == array('0')) {
      $sources_ids = array_keys($sources);
    }
    else {
      $sources_ids = $notification['sources'];
    }
    foreach ($sources_ids as $source_id) {
      if ($source_id && isset($items_source[$source_id])) {
        $items_source_ids = array_merge($items_source_ids, $items_source[$source_id]);
        $sources_names[] = $sources[$source_id];
      }      
    }
    if ($notification['types'] == array('0')) {
      $types_ids = array_keys($types);
    }
    else {
      $types_ids = $notification['types'];
    }
    foreach ($types_ids as $type_id) {
      if ($type_id && isset($items_type[$type_id])) {
        $items_type_ids = array_merge($items_type_ids, $items_type[$type_id]);
        $types_names[] = $types[$type_id];
      }
    }
    $items_ids = array_unique(array_intersect($items_source_ids, $items_type_ids));
    $filters = array('sources' => implode(', ', $sources_names), 'types' => implode(', ', $types_names));
    $email_message = idskshub_generate_email($operation, $items_notify, $items_ids, $types, $sources, $filters);
    trigger_error($email_message);
    idskshub_send_notifications_emails($operation, $uids, $email_message, $filters);
  }
}

function idskshub_generate_email($operation, $items_notify, $items_ids, $types, $sources, $filters) {
  $action = ltrim($operation, 'items_');
  $message = t('*** OKHub Notifications ***') . "\n\n";

  $message .= t('To change/add notifications please go to http://data.okhub.org/notifications.') . "\n\n";

/*
  $message .= t('Items that match the following conditions:') . "\n";
  if ($filters['sources']) {
    $message .= '    - ' . t('Sources:') . $filters['sources'] . "\n";
  }
  else {
    $message .= '    - ' . t('All sources') . "\n";
  }  
  if ($filters['types']) {
    $message .= '    - ' . t('Types:') . $filters['types'] . "\n\n";
  }
  else {
    $message .= '    - ' . t('All types') . "\n\n";
  }
*/
  $message .= t('*** Summary ***') . "\n\n";
  if (!count($items_ids)) {
    $message .= t('No items were ') .  t('@operation', array('@operation' => $action)) . ".\n\n";
  }
  else {
    $message .= count($items_ids) . t(' items were ') .  t('@operation', array('@operation' => $action)) . ".\n\n";

    $message .= t('*** Detail ***') . "\n\n";
    $display_titles = IdsKsItem::getFieldValues('display_title', $items_ids);
    $types_ids = IdsKsItem::getFieldValues('type', $items_ids);
    $sources_ids = array();
    if ($track_changes = IdsKsItem::getFieldValues('track_changes', $items_ids)) {
      foreach($track_changes as $item_id => $track_changes_ids) {
        if ($sources_changes = IdsKsTrackChanges::getFieldValues('source', $track_changes_ids)) {
          foreach ($sources_changes as $source_id) {
            $sources_ids[$item_id] = $source_id;
          }
        }
      }
    }    
    foreach ($items_ids as $item_id) {
      if (isset($display_titles[$item_id][0]) && $display_titles[$item_id][0]) {
        $message .= ' - "' . $display_titles[$item_id][0] . '"';
        if (isset($types[$types_ids[$item_id][0]]) && $types[$types_ids[$item_id][0]]) {
          $message .= ' (' . $types[$types_ids[$item_id][0]] . ')';
        }
        if (isset($sources[end($sources_ids[$item_id])]) && $sources[end($sources_ids[$item_id])]) {
          $message .= ' By ' . $sources[end($sources_ids[$item_id])];
        }
        $message .= t(' on ') . date(DATE_RFC2822, $items_notify[$item_id]);
        if ($action !== 'deleted') {
          $message .= ' - ' . IDSKS_OKHUB_URL .'/item/' . $item_id;
        }
        $message .= "\n";
      }
    }
  }
  return $message;
}

function idskshub_send_notifications_emails($operation, $uids, $email_message, $filters) {
  $subject = t('Oriel OK Hub: ') . ucfirst(preg_replace('/_/',' ', $operation));
/*
  if ($filters['sources']) {
    $subject .= ' - ' . t('Sources: ') . $filters['sources'];
  }
  else {
    $subject .= ' - ' . t('All sources');
  }  
  if ($filters['types']) {
    $subject .= ' - ' . t('Types: ') . $filters['types'];
  }
  else {
    $subject .= ' - ' . t('All types') . "\n";
  }
*/

  $users = user_load_multiple($uids);
  foreach ($users as $user) {
    if (isset($user->mail)) {
      idskshub_send_email($user->mail, $user->language, $subject, $email_message);
    }
  }
}

function idskshub_send_email($to, $language, $subject, $body) {
  if (empty($language)) {
    $language = language_default();
  }
  $params = array(
    'subject' => $subject,
    'body' => $body,
  );
  drupal_mail('idskshub', 'notification', $to, $language, $params, IDSKS_FROM_EMAIL_ADDRESS);
}

function idskshub_mail($key, &$message, $params) {
  $message['subject'] = $params['subject'];
  $message['body'] = array($params['body']);
}

// Merge items.
function idskshub_process_merge_items($items_ids) {
  idskshub_set('merging_items', TRUE);
  $mode = 'interactive';
  if (count($items_ids) > 5) {
    $mode = 'background';
    drupal_set_message(t('Merging process continue in background. You can leave this page.'));
  }
  // In the future we could split the items into smaller chunks.
  $batch = array(
    'operations' => array(
      array('idskshub_merge_items', array($items_ids)),
      ),  
    'title' => t('Merging items '),
    'init_message' => t('Merging...'),
    'file' => drupal_get_path('module', 'idskhub') . '/idskhub.module',
  );
  batch_set($batch);
  if ($mode == 'background') {
    background_batch_process_batch('imported-items-admin');
  }
  else {
    batch_process('imported-items-admin');
  }
}

function idskshub_merge_items($items_ids, &$context) { 
  if (IdsKsItem::mergeMultipleItemsById($items_ids)) {
    $context['message'] = t('Items merged.');
  }
  else {
    $context['message'] = t('A problem occurred and the items could have not been merged. Please verify.');
  }
  idskshub_set('merging_items', FALSE);
}

// Create relationships uploaded from a CSV file.
function idskshub_create_relationships_file($fid, $source1_id, $source2_id, $identifiers, $type1_id, $type2_id, $create1, $create2, $lang1, $lang2, $replace) {
  if ($fid) {
    $file = file_load($fid);
    $file_path = drupal_realpath($file->uri);
    $file_contents = file_get_contents($file_path);
    $file_contents = mb_convert_encoding($file_contents, 'UTF-8');
    $bom = pack('H*','EFBBBF'); // In case it is encoded as UTF-8-BOM.
    $file_contents = preg_replace("/^$bom/", '', $file_contents);
    $lines = explode("\n", $file_contents);
  }
  if ($lines) {
    $okhub_source = new IdsKsSource;
    $okhub_source->set('code', IDSKS_OKHUB_SOURCE_CODE);
    $okhub_source->load();
    $type1 = new IdsKsType;
    $type1->load($type1_id);
    $type2 = new IdsKsType;
    $type2->load($type2_id);
    $source1 = new IdsKsSource;
    $source1->load($source1_id);
    $source2 = new IdsKsSource;
    $source2->load($source2_id);
    $identifier_name1 = $identifiers[$source1_id];
    $identifier_name2 = $identifiers[$source2_id];
    if ($lang1) {
      $lang_attr1 = IdsKsAttribute::getAttribute(IDSKS_LANGUAGE_ATTRIBUTE, $lang1);
      $lang_attrs1 = array($lang_attr1);
    }
    else {
      $lang_attrs1 = array();
    }
    if ($lang2) {
      $lang_attr2 = IdsKsAttribute::getAttribute(IDSKS_LANGUAGE_ATTRIBUTE, $lang2);
      $lang_attrs2 = array($lang_attr2);
    }
    else {
      $lang_attrs2 = array();
    }
    if ($type1->isSaved() && $type2->isSaved() && $source1->isSaved() && $source2->isSaved()) {
      $batch = array(
        'operations' => array(
          array('idskshub_create_relationship', array($lines, $okhub_source, $source1, $source2, $identifier_name1, $identifier_name2, $type1, $type2, $create1, $create2, $lang_attrs1, $lang_attrs2, $replace)),
        ),  
        'title' => t("Importing relationships"),
        'error_message' => t('Error importing relationships.'),
      );
      batch_set($batch);
      batch_process('upload-data-linkages');
    }
  }
}

function idskshub_create_relationship($lines, $okhub_source, $source1, $source2, $identifier_name1, $identifier_name2, $type1, $type2, $create1, $create2, $lang_attrs1, $lang_attrs2, $replace, &$context){
  $context['sandbox']['max'] = count($lines);
  if (!isset($context['sandbox']['progress'])) {
    $context['sandbox']['progress'] = 0;
    $context['finished'] = 0;
  }
  else {
    $context['sandbox']['progress']++;
    $context['message'] = 'Processing line ' . $context['sandbox']['progress'];
    $context['finished'] = $context['sandbox']['progress'] / $context['sandbox']['max'];
  }
  if (isset($lines[$context['sandbox']['progress']])) {
    if (($line = $lines[$context['sandbox']['progress']]) && !preg_match('/^\s*#/', $line)) {
      list($label1, $identifier_val1, $rel_code, $label2, $identifier_val2) = str_getcsv($line);
      trim($label1);
      trim($identifier_val1);
      trim($rel_code);
      trim($label2);
      trim($identifier_val2);
      if (isset($identifier_val1) && isset($rel_code) && isset($identifier_val2) && $identifier_val1 !== '' && $rel_code !== '' && $identifier_val2 !== '') {
        $item1 = new IdsKsItem;
        $item1->set('type', $type1);
        if ($items1_ids = IdsKsItem::retrieveItemIdsByKeys(array($identifier_name1 => $identifier_val1), FALSE, $source1, $type1)) {
          $item1_id = array_shift($items1_ids);
          $item1->load($item1_id);
        }
        elseif ($create1) {
          $lits_id1 = new IdsKsVersionsLiteral;
          $lits_id1->set('path', $identifier_name1);
          $lits_id1->addLiteralXML($identifier_val1, $source1, $identifier_name1);
          $item1->add('versions_literals', $lits_id1);
          if ($label1) {
            $lits_label1 = new IdsKsVersionsLiteral;
            $lits_label1->set('path', IDSKS_DEFAULT_MAPPED_FIELD); // TODO: Make it possible to select the label.
            $lits_label1->addLiteralXML($label1, $source1, IDSKS_DEFAULT_MAPPED_FIELD, $lang_attrs1);
            $item1->add('versions_literals', $lits_label1);
          }
          $item1->addChanges($source1);
          $item1->setDisplayTitle();
          $item1->saveItem(TRUE, FALSE);
        }
        $item2 = new IdsKsItem;
        $item2->set('type', $type2);
        if ($items2_ids = IdsKsItem::retrieveItemIdsByKeys(array($identifier_name2 => $identifier_val2), FALSE, $source2, $type2)) {
          $item2_id = array_shift($items2_ids);
          $item2->load($item2_id);
        }
        elseif ($create2) {
          $lits_id2 = new IdsKsVersionsLiteral;
          $lits_id2->set('path', $identifier_name2);
          $lits_id2->addLiteralXML($identifier_val2, $source2, $identifier_name2);
          $item2->add('versions_literals', $lits_id2);
          if ($label2) {
            $lits_label2 = new IdsKsVersionsLiteral;
            $lits_label2->set('path', IDSKS_DEFAULT_MAPPED_FIELD); // TODO: Make it possible to select the label.
            $lits_label2->addLiteralXML($label2, $source2, IDSKS_DEFAULT_MAPPED_FIELD, $lang_attrs2);
            $item2->add('versions_literals', $lits_label2);
          }
          $item2->addChanges($source2);
          $item2->setDisplayTitle();
          $item2->saveItem(TRUE, FALSE);
        }
        if ($item1->isSaved() && $item2->isSaved()) {
          if (isset($context['relationships'][$rel_code])) {
            $relationship = $context['relationships'][$rel_code];
          }
          else {
            $relationship = new IdsKsRelationship;
            $relationship->set('code', $rel_code);
            $relationship->load();
            if ($relationship->getId()) {
              $context['relationships'][$rel_code] = $relationship;
            }
          }
          if ($relationship->getId()) {
            if ($existing_rel_item = $item1->getRelatedItem($item2)) { // If it exists and the relationship is different we update it.
              if ($existing_rel_item->get('relationship') && $replace == 'replace' && $existing_rel_item->get('relationship')->get('code') <> $rel_code) {
                $existing_rel_item->set('relationship', $relationship);
                $existing_rel_item->save();
              }
            }
            else {
              $rel_item = new IdsKsRelatedItem;
              $rel_item->set('referred_item', $item2);
              $rel_item->set('relationship', $relationship);
              $rel_item->set('source', $okhub_source);
              $rel_item->save();
              if ($rel_item->getId()) {
                $item1->add('related_items', $rel_item);
                $item1->save();
                $item1->reindexParents();
              }
            }
            // Add inverse relationship if it exists.
            if ($inverse_rel_code = $relationship->get('inverse')) {
              if (isset($context['relationships'][$inverse_rel_code])) {
                $relationship = $context['relationships'][$inverse_rel_code];
              }
              else {
                $relationship = new IdsKsRelationship;
                $relationship->set('code', $inverse_rel_code);
                $relationship->load();
                if ($relationship->getId()) {
                  $context['relationships'][$inverse_rel_code] = $relationship;
                }
              }
              if ($relationship->getId()) {
                if ($existing_rel_item = $item2->getRelatedItem($item1)) { // If it exists and the relationship is different we update it.
                  if ($existing_rel_item->get('relationship') && $replace == 'replace' && $existing_rel_item->get('relationship')->get('code') <> $inverse_rel_code) {
                    $existing_rel_item->set('relationship', $relationship);
                    $existing_rel_item->save();
                  }
                }
                else {
                  $rel_item = new IdsKsRelatedItem;
                  $rel_item->set('referred_item', $item1);
                  $rel_item->set('relationship', $relationship);
                  $rel_item->set('source', $okhub_source);
                  $rel_item->save();
                  if ($rel_item->getId()) {
                    $item2->add('related_items', $rel_item);
                    $item2->save();
                    $item2->reindexParents();
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  else {
    $context['finished'] = 1;
  }
}

// Generate paths to use a base for mappings
function idskshub_paths_literals($item) {
  $csv = array();
  $type_name = ($item->get('type')->get('name')) ? $item->get('type')->get('name') : '*';
  foreach ($item->get('versions_literals') as $vl) {
    foreach ($vl->get('literals') as $lit) {
      if ($lit) {
        $format_code = '*';
        $source_code = ($lit->get('source')->get('code')) ? $lit->get('source')->get('code') : '';
        $original_path = ($lit->get('original_path')) ? $lit->get('original_path') : '';
        if ($lit->get('attributes')) {
          $attributes = array();
          foreach ($lit->get('attributes') as $attribute) {
            $attributes[] = $attribute->get('name') . '=' . $attribute->get('value');
          }
          if ($attributes) {
            $attributes_str = implode(',', $attributes);
          }
        }
        else {
          $attributes_str = '';
        }
        $mapped_path = ($vl->get('path')) ? $vl->get('path') : '';
        $csv[] = "\"$format_code\",\"$source_code\",\"$type_name\",\"$original_path\",\"$attributes_str\",\"$mapped_path\",\"\",\"\"\n";
      }
    }
  }
  return $csv;
}

function idskshub_paths_item($item) {
  $csv = idskshub_paths_literals($item);
  if ($item->get('subitems')) {
    foreach ($item->get('subitems') as $subitem) {
      if ($item->get('root_attributes')) {
        foreach ($item->get('root_attributes') as $attribute) {
          if (preg_match('/\[(.+)\]:\[(.+)\]:(.+)/', $attribute->get('name'), $matches)) {
            $source_code = $matches[1];
            $original_path = $matches[2];
            $attr_name = $matches[3];
            $attributes_str = $attr_name . '=' . $attribute->get('value');
            $source = new IdsKsSource;
            $source->set('code', $source_code);
            $source->load();
            $format_code = ($source->get('default_format')->get('code')) ? $source->get('default_format')->get('code') : '';
            $source_code = ($source->isSaved()) ? $source->get('code') : '';
            $csv[] = "\"$format_code\",\"$source_code\",\"$original_path\",\"$attributes_str\",\"$original_path\",\"\",\"\"\n";
          }
        }
      }
      $csv[] = idskshub_paths_item($subitem);
    }
  }
  return implode(array_unique($csv));
}


// Implement hook_access.
function idskshub_access($op, $task, $account = NULL, $entity_type = NULL) {
  global $user;
  if (!isset($account)) {
    $account = $user;
  }
  return user_access('manage idsks', $account);
}

// Manage persistant variables.
function idskshub_set($variable, $value) {
  $variable = 'idskshub_' . $variable;
  variable_set($variable, $value);
}

function idskshub_get($variable, $default = NULL) {
  $variable = 'idskshub_' . $variable;
  $value = variable_get($variable, $default);
  return $value;
}

function idskshub_del($variable) {
  $variable = 'idskshub_' . $variable;
  variable_del($variable);
}

function idskshub_diff($obj1, $obj2) {
  $equal = FALSE;
  if (is_a($obj1, 'IdsKsObject') && is_a($obj2, 'IdsKsObject')) {
    $class1 = get_class($obj1);
    $equal = $class1::equal($obj1, $obj2);
  }
  if ($equal) {
    $ret = 0;
  }
  else { // array_udiff doesn't work ok if we always return 1 for different values, for instance.
    $ret = strcmp(serialize($obj1), serialize($obj2)); 
  }
  return $ret;
}

function idskshub_change_namespace($str) {
  return preg_replace('/([\-\w]+):([\-\w]+)/', '\1--\2', $str);
}

function idskshub_restore_namespace($str) {
  return preg_replace('/([\-\w]+)\-\-([\-\w]+)/', '\1:\2', $str);
}

function idskshub_string_to_slug($string) {
  $string = str_replace(array('/', ' ','-'), '_', $string);
  $accents = '/&([A-Za-z]{1,2})(tilde|grave|acute|circ|cedil|uml|lig);/';
  return urlencode(strtolower(preg_replace($accents, '$1', htmlentities(utf8_decode($string)))));
}

function idskshub_flatten_array($input) {
  array_walk_recursive($input, function ($input) use (&$flattened) {$flattened[] = $input;});
  if (isset($flattened)) {
    return $flattened;
  }
  else {
    return array();
  }
}


