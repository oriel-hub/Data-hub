function idskshub_get_formats_codes() {
  $array_formats = array();
  $f = new IdsKsFormat();
  $formats = $f->getObjectsByProperties();
  foreach ($formats as $format) {
    $array_formats[$format->get('code')] = $format->get('name');
  }
  asort($array_formats);
  return $array_formats;    
}

function idskshub_get_types_names() {
  $array_types = array();
  $t = new IdsKsType();
  $types = $t->getObjectsByProperties();
  foreach ($types as $type) {
    if ($type->get('name') !== IDSKS_GENERIC_TYPE_NAME) {
      $array_types[$type->get('name')] = $type->get('name');
    }
  }
  asort($array_types);
  return $array_types;    
}

function idskshub_get_types_ids() {
  $array_types = array();
  $t = new IdsKsType();
  $types = $t->getObjectsByProperties();
  foreach ($types as $type) {
    if ($type->get('name') <> IDSKS_GENERIC_TYPE_NAME) {
      $array_types[$type->getId()] = $type->get('name');
    }
  }
  asort($array_types);
  return $array_types;    
}

function idskshub_get_sources_codes() {
  $array_sources = array();
  $s = new IdsKsSource();
  $sources = $s->getObjectsByProperties();
  foreach ($sources as $source) {
    $array_sources[$source->get('code')] = $source->get('name');
  }
  asort($array_sources);
  return $array_sources;    
}

function idskshub_get_relationship_ids() {
  $array_relationships = array();
  $r = new IdsKsRelationship();
  $relationships = $r->getObjectsByProperties();
  foreach ($relationships as $relationship) {
	if ($relationship->get('type') && $relationship->get('item_type')) {
    $array_relationships[$relationship->getId()] = $relationship->get('type') . ' - ' . $relationship->get('item_type')->get('name');
  	}
  }
  asort($array_relationships);
  return $array_relationships;    
}

function idskshub_get_item_sources($item_id) {
  $item = new IdsKsItem();
  $item->load($item_id);
  $sources = $item->getSourcesFromValues();
  $array_sources = array();
  foreach ($sources as $source) {
    $array_sources[$source->getId()] = $source->get('name');
  }
  return $array_sources;
}

function idskshub_get_item_sources_codes($item_id) {
  $item = new IdsKsItem();
  $item->load($item_id);
  $sources = $item->getSourcesFromValues();
  $array_sources = array();
  foreach ($sources as $source) {
    $array_sources[$source->getId()] = $source->get('code');
  }
  return $array_sources;
}

function idskshub_get_types_source($source_id) {
  $types_names = array();
  if ($track_ids = IdsKsTrackChanges::getIds(array('source' => $source_id))) {
    if ($items_ids = IdsKsItem::getIds(array('track_changes' => $track_ids))) {
      if ($types_ids = array_unique(idskshub_flatten_array(IdsKsItem::getFieldValues('type', $items_ids)))) {
        $types_names = idskshub_flatten_array(IdsKsType::getFieldValues('name', $types_ids));
        $types_names = array_diff($types_names, array(IDSKS_GENERIC_TYPE_NAME));
      }
    }
  }
  return($types_names);
}

function idskshub_hub_source() {
  $source = new IdsKsSource();
  if (!defined('IDSKS_HUB_SOURCE_CODE')) {
    drupal_set_message(t('IDSKS_HUB_SOURCE_CODE not defined. Code "hub" assumed.'), 'warning');
  }
  $source->set('code', 'hub');
  $source->load();
  if (!($source->isSaved())) {
    if (!defined('IDSKS_HUB_SOURCE_CODE')) {
      drupal_set_message(t('IDSKS_HUB_SOURCE_NAME not defined. Name "OKHub" assumed.'), 'warning');
    }
    $source->set('name', 'OKHub');
    $source->save();
  }
  return $source;
}

function idskshub_get_values($item_id, $path, $source) {
  $item = new IdsKsItem;
  $item->load($item_id);
  return implode(',',array_unique(idskshub_flatten_array($item->getPathValues($path, $source))));
}

function idskshub_get_xml_values($xml_item, $item_path, $root_path='') {
  $path_xml = '';
  if ($root_path) {
    $path_xml = '//' . idskshub_change_namespace($root_path) . '/';
  }
  $path_xml .= idskshub_change_namespace($item_path);
  $xml_values = $xml_item->xpath($path_xml);
  return $xml_values;
}

function idskshub_get_semantic_services() {
  $semantic_services = idskshub_semantic_services_definitions();
  $show_services = array();
  foreach ($semantic_services as $code => $name) {
    $source_semantic = new IdsKsSource();
    $source_semantic->set('code', $code);
    $source_semantic->load();
    if (!($source_semantic->getId())) { // If it doesn't exist, we created it.
      if (preg_match('/^[a-z]+$/', $code)) {
        $source_semantic->set('name', $name);
        $source_semantic->set('is_semantic', 1);
        $source_semantic->save();
        $show_services[$code] = $name;
      }
      else {
        drupal_set_message(t('@code is not a valid source code. Please check the semantic services definitions', array('@code' => $code)), 'warning');
      }
    }
    else {
      if (!$source_semantic->get('is_semantic')) {
        drupal_set_message(t('The source with code @code exists but it is not an external semantic augmentation service.', array('@code' => $code)), 'warning');        
      }
      else {
        $show_services[$code] = $name;
      }
    }
  }
  return $semantic_services;
}

function idskshub_index_selected($items_ids, $page_batch='') {
  if (!empty($items_ids)) {
    if ($index_hub = search_api_index_load(IDSKS_SOLR_INDEX)) {
      $num = count($items_ids);
      $items = ($num > 1) ? 'items' : 'item';
      $batch = array(
        'operations' => array(
          array('search_api_index_specific_items', array($index_hub, $items_ids)),
        ),  
        'title' => t("Indexing @num @items", array('@num' => $num, '@items' => $items)),
        'error_message' => t('Error indexing. Please check the logs.'),
      );
      batch_set($batch);
      batch_process($page_batch);
    }
    else {
      drupal_set_message(t('The index could not be loaded.'), 'status'); 
    }
  }
  else {
    drupal_set_message(t('No items were selected.'), 'status'); 
  }
}

function idskshub_split_selected($items_ids, $page_batch='') {
  if (!empty($items_ids)) {
    $num = count($items_ids);
    $items = ($num > 1) ? 'items' : 'item';
    $batch = array(
      'operations' => array(
        array('idskshub_split_items', array($items_ids)),
      ),  
      'title' => t("Splitting @num @items", array('@num' => $num, '@items' => $items)),
    );
    batch_set($batch);
    batch_process($page_batch);
  }
  else {
    drupal_set_message(t('No items were selected.'), 'status'); 
  }
}

function idskshub_split_items($items_ids) {
  foreach ($items_ids as $item_id) {
    $item = new IdsKsItem;
    $item->load($item_id);
    $item->splitBySources();
  }
}

function idskshub_delete_items_page($page_arguments) {
  $items = explode(',', $page_arguments);
  echo '<ul>';
    foreach ($items as $item) {
      if (is_numeric($item)) {
        if (IdsKsItem::deleteItem($item, TRUE, TRUE)) {
          echo "<li> Deleted item $item\n";
        }
        else {
          echo "<li> The item $item does not exist.\n";
        }
      }
    }
  echo '</ul>';
}

function idskshub_delete_literals_page($page_arguments) {
  $literals = explode(',', $page_arguments);
  echo '<ul>';
    foreach ($literals as $literal) {
      if (is_numeric($literal)) {
        if (IdsKsLiteral::deleteLiteral($literal, TRUE)) {
          echo "<li> Deleted literal $literal\n";
        }
        else {
          echo "<li> The literal $literal does not exist.\n";
        }
      }
    }
  echo '</ul>';
}

function idskshub_delete_related_item($page_arguments) {
  $ids = explode(',', $page_arguments);
  if (is_numeric($ids[0]) && is_numeric($ids[0])) {
    $item_id = $ids[0];
    $rel_item_id = $ids[0];
    $item = new IdsKsItem;
    $item->load($item_id);
    if ($item->isSaved()) {
      $item->deleteRelatedItemsByIds(array($rel_item_id));
      echo '<ul>';
        echo '<li>Related items deleted</li>';
      echo '</ul>';
    }
    else {
      echo '<ul>';
        echo '<li>The item with id '. $item_id .' could not be retrieved.</li>';
      echo '</ul>';
    }
  }
  else {
    echo '<ul>';
      echo '<li>Invalid arguments</li>';
    echo '</ul>';
  }
  echo "<a class='button blue' href='/item/$item_id'>Go back to the item</a>";
}

function idskshub_touch_by_sources($sources_ids) {
  $changes_ids = IdsKsTrackChanges::getIds(array('source' => $sources_ids));
  $items_ids = IdsKsItem::getIds(array('track_changes' => $changes_ids));
  IdsKsItem::markToIndex($items_ids);
}

function idskshub_index_by_sources($sources_ids) {
  $changes_ids = IdsKsTrackChanges::getIds(array('source' => $sources_ids));
  $items_ids = IdsKsItem::getIds(array('track_changes' => $changes_ids));
  idskshub_index_selected($items_ids, 'sources');
}

